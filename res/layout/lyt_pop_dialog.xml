<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_pop_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_20"
    android:padding="20dp"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/s_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_lyt_pop_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="标题"
            android:textColor="@color/s_dark_gray"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/btn_blue_bg_sel_f"
            android:clickable="false" />

        <LinearLayout
            android:id="@+id/lyt_lyt_pop_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_lyt_pop_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="内容"
                android:textColor="@color/s_dark_gray"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_lyt_pop_dialog_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white2gray_selector_norect"
                android:gravity="center"
                android:minHeight="45dp"
                android:text="取消"
                android:textColor="@color/s_dark_gray"
                android:textSize="20sp" />

            <View
                 android:id="@+id/v_lyt_pop_dialog_cancle"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/bg_gray"
                android:clickable="false" />

            <TextView
                android:id="@+id/txt_lyt_pop_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white2gray_selector_norect"
                android:gravity="center"
                android:minHeight="45dp"
                android:text="确认"
                android:textColor="@color/s_dark_gray"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>